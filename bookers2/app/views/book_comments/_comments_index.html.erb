<table class="table">
<% books.book_comments.each do |book| %>
  <tr>
    <td><%= book.user.name %></td>
    <td><%= book.created_at.strftime('%Y/%m/%d') %></td>
    <td><%= book.comment %></td>
    <td>
      <% if book.user == current_user %>
        <%= link_to "Destroy", book_book_comment_path(book.book, book), method: :delete, remote: true %>
      <% end %>
    </td>
  </tr>
<% end %>
</table>


