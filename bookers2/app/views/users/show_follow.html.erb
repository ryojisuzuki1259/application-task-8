<div class="container">
  <div class="row">
    <div class="col-xs-3">
      <h2>User info</h2>
	  	<%= render 'users/profile', user: @user %>
  		<h2>New book</h2>
	  	<%= render 'books/form', book: @new %>
    </div>

    <div class="col-xs-9">
      <h2>Followings</h2>
      <% @user.followings.each do |user| %>
        <table class="table">
          <thead>
	  	      <tr>
			        <th>image</th>
			        <th>name</th>
		  	      <th colspan="3"></th>
		        </tr>
	        </thead>
	        <tbody>
            <tr>
              <td><%= attachment_image_tag(user, :profile_image, :fill, 50, 50, fallback: "no-image-mini.jpg") %></td>
              <td>  <%= user.name %> </td>
              <td><%= link_to 'Show', user_path(user) %></td>
              <td><%= render 'users/stats', user: user %></td>
			        <td><%= render 'users/follow_form', user: user %></td>
            </tr>
          </tbody>
        </table>
      <% end %>
    </div>
  </div>
</div>